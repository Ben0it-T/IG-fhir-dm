# FHIR QuestionnaireResponse Processor Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test
DB_USER=test
DB_PASSWORD=test
DB_SSLMODE=prefer

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security Configuration
# IMPORTANT: Generate a proper encryption key for production
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FHIR_ENCRYPTION_KEY=your-encryption-key-here

# Logging Configuration
LOG_LEVEL=INFO
DB_ECHO=false

# Processing Configuration
BATCH_SIZE=1000
MAX_WORKERS=4

# Healthcare Compliance
GDPR_COMPLIANCE_LEVEL=STRICT
AUDIT_ENABLED=true