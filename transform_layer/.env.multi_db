# Multi-database environment configuration

# EHR Source Database (Read-Only)
EHR_HOST=ehr-server.hospital.local
EHR_PORT=5432  
EHR_DATABASE=ehr_production
EHR_SCHEMA=public
EHR_USER=readonly_user
EHR_PASSWORD=readonly_password

# DBT Target Database (FHIR Semantic Layer)
FHIR_HOST=fhir-server.hospital.local
FHIR_PORT=5432
FHIR_DATABASE=fhir_semantic_layer
FHIR_SCHEMA=public
FHIR_USER=fhir_etl_user
FHIR_PASSWORD=fhir_etl_password

# DBT Working Database (same as FHIR or separate)
DBT_HOST=${FHIR_HOST}
DBT_PORT=${FHIR_PORT}
DBT_DATABASE=${FHIR_DATABASE}
DBT_SCHEMA=dbt_dev
DBT_USER=${FHIR_USER}
DBT_PASSWORD=${FHIR_PASSWORD}

# Optional: Terminology Database
TERMINOLOGY_HOST=terminology-server.hospital.local
TERMINOLOGY_DATABASE=terminology
TERMINOLOGY_USER=terminology_user
TERMINOLOGY_PASSWORD=terminology_password

# Optional: Archive Database for Snapshots
ARCHIVE_DATABASE=fhir_archive
ARCHIVE_SCHEMA=snapshots