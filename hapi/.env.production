# HAPI FHIR Production Environment
# IMPORTANT: Update all passwords and sensitive values before deployment

# PostgreSQL
POSTGRES_DB=hapi_prod
POSTGRES_USER=hapi_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
POSTGRES_PORT=5432
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=1GB
POSTGRES_EFFECTIVE_CACHE_SIZE=3GB

# HAPI FHIR
HAPI_VERSION=v7.0.0
HAPI_FHIR_VERSION=R4
HAPI_PORT=8080
HAPI_SERVER_ADDRESS=https://fhir.yourdomain.com/fhir

# Security
HAPI_CORS_ALLOWED_ORIGIN=https://app.yourdomain.com
HAPI_CORS_ALLOW_CREDENTIALS=true
HAPI_SECURITY_ENABLED=true
HAPI_OAUTH_ENABLED=true

# Validation
HAPI_VALIDATION_REQUESTS_ENABLED=true
HAPI_VALIDATION_RESPONSES_ENABLED=true

# JVM (for 8GB RAM server)
JVM_HEAP_MIN=2048m
JVM_HEAP_MAX=4096m

# Resource Limits
HAPI_CPU_LIMIT=4
HAPI_MEMORY_LIMIT=6G
POSTGRES_CPU_LIMIT=2
POSTGRES_MEMORY_LIMIT=2G

# Hibernate
HIBERNATE_HBM2DDL_AUTO=validate
HIBERNATE_SHOW_SQL=false

# Connection Pool
HIKARI_MAXIMUM_POOL_SIZE=30
HIKARI_MINIMUM_IDLE=10

# Environment
ENVIRONMENT=production
TZ=UTC

# Monitoring
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_456!
GRAFANA_ROOT_URL=https://monitoring.yourdomain.com

# Logging
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_FHIR=INFO
LOG_LEVEL_HIBERNATE=ERROR
LOG_LEVEL_SQL=ERROR